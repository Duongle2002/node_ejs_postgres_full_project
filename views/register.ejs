
<% layout('layout') -%>
<section class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">Đăng ký</h2>
    <div class="auth-sub">Tạo tài khoản để lưu địa chỉ, xem lịch sử đơn hàng và nhiều hơn nữa.</div>
    <form method="POST" action="/register">
      <div class="auth-field"><label>Họ tên</label><input class="input" name="name" required autocomplete="name"></div>
      <div class="auth-field"><label>Email</label><input class="input" name="email" required autocomplete="email"></div>
      <div class="auth-field"><label>Mật khẩu</label><input class="input" name="password" type="password" required autocomplete="new-password"></div>
      <div class="auth-actions">
        <button class="btn btn-primary" type="submit">Đăng ký</button>
        <a class="btn btn-outline" href="/login">Đã có tài khoản</a>
      </div>
    </form>
  </div>
</section>

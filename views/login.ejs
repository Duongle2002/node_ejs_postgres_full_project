<% layout('layout') -%>
<section class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">Đăng nhập</h2>
    <div class="auth-sub">Đăng nhập để tiếp tục mua sắm và quản lý đơn hàng của bạn.</div>
    <form method="POST" action="/login">
      <div class="auth-field">
        <label>Email</label>
        <input class="input" name="email" required autocomplete="email" />
      </div>
      <div class="auth-field">
        <label>Mật khẩu</label>
        <input class="input" name="password" type="password" required autocomplete="current-password" />
      </div>
      <div class="auth-actions">
        <button class="btn btn-primary" type="submit">Đăng nhập</button>
        <a class="btn btn-outline" href="/register">Đăng ký</a>
      </div>
      <div class="auth-note">Quên mật khẩu? <a href="/forgot">Lấy lại</a></div>
    </form>
  </div>
</section>
